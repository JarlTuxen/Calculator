<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dk.kea.class2017.jarltuxen.calculator.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/TextViewResult"
        android:textAlignment="textEnd"
        android:textSize="30sp"/>

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_alignBottom="@+id/buttonMultiply"
        android:layout_toStartOf="@+id/buttonMultiply"
        android:onClick="onBtnAnyClick"/>

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:layout_alignBottom="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:onClick="onBtnAnyClick"/>

    <Button
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonEquals"
        android:layout_toStartOf="@+id/buttonEquals"
        android:id="@+id/buttonDecimal"
        android:onClick="onBtnAnyClick"/>

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEquals"
        android:layout_below="@+id/buttonMinus"
        android:layout_alignParentEnd="true"
        android:onClick="onBtnAnyClick"/>

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button0"
        android:layout_below="@+id/button1"
        android:layout_toStartOf="@+id/button2"
        android:onClick="onBtnAnyClick"/>

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_alignBottom="@+id/button6"
        android:layout_toStartOf="@+id/button6"
        android:onClick="onBtnAnyClick"/>

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonC"
        android:onClick="onBtnAnyClick"
        android:layout_below="@+id/TextViewResult"
        android:layout_toStartOf="@+id/buttonDivide"/>

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:onClick="onBtnAnyClick"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_toStartOf="@+id/button9"/>

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:onClick="onBtnAnyClick"
        android:layout_alignBaseline="@+id/button8"
        android:layout_alignBottom="@+id/button8"
        android:layout_toStartOf="@+id/button8"/>

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMultiply"
        android:onClick="onBtnAnyClick"
        android:layout_below="@+id/buttonPlus"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="onBtnAnyClick"
        android:layout_alignBaseline="@+id/buttonMinus"
        android:layout_alignBottom="@+id/buttonMinus"
        android:layout_toStartOf="@+id/buttonMinus"/>

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:onClick="onBtnAnyClick"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_toStartOf="@+id/button5"/>

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMinus"
        android:onClick="onBtnAnyClick"
        android:layout_below="@+id/buttonMultiply"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPlus"
        android:onClick="onBtnAnyClick"
        android:layout_below="@+id/buttonDivide"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:onClick="onBtnAnyClick"
        android:layout_alignBaseline="@+id/buttonPlus"
        android:layout_alignBottom="@+id/buttonPlus"
        android:layout_toStartOf="@+id/buttonPlus"/>

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="onBtnAnyClick"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_toStartOf="@+id/button3"/>

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDivide"
        android:onClick="onBtnAnyClick"
        android:layout_below="@+id/TextViewResult"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
